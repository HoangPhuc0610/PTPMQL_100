@model BaiTapVeNha.Models.Bai2

@{
    ViewData["Title"] = "Bài 2 - Máy tính đơn giản";
}

<h2>Bài 2: Máy tính đơn giản</h2>

<form asp-action="Bai2" method="post">
    <div>
        <label>Số thứ nhất:</label>
        <input type="number" step="any" name="Number1" value="@Model?.Number1" required />
    </div>

    <div>
        <label>Số thứ hai:</label>
        <input type="number" step="any" name="Number2" value="@Model?.Number2" required />
    </div>

    <div>
        <label>Phép toán:</label>
        <select name="Operation">
            <option value="add">Cộng (+)</option>
            <option value="sub">Trừ (-)</option>
            <option value="mul">Nhân (×)</option>
            <option value="div">Chia (÷)</option>
        </select>
    </div>

    <button type="submit">Tính</button>
</form>

@if (ViewBag.Result != null)
{
    <h3>Kết quả: <b>@ViewBag.Result</b></h3>
}
